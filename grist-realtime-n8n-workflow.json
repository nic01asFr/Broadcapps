    {
      "parameters": {
        "jsCode": "// ============================================\n// PR√âPARATION MESSAGE BROADCAST\n// ============================================\n\nconst gristData = $input.all()[0].json;\n\n// D√©termine le type d'√©v√©nement\nconst eventType = gristData.action || 'update';\n\n// Pr√©pare le message structur√©\nconst message = {\n  timestamp: new Date().toISOString(),\n  type: 'intervention_update',\n  action: eventType,\n  data: {\n    id: gristData.id,\n    agent: gristData.fields?.Agent || gristData.Agent || 'Non assign√©',\n    localisation: gristData.fields?.Localisation || gristData.Localisation || 'Non sp√©cifi√©',\n    type: gristData.fields?.Type || gristData.Type || 'Autre',\n    statut: gristData.fields?.Statut || gristData.Statut || 'En attente',\n    priorite: gristData.fields?.Priorite || gristData.Priorite || 'Normale',\n    commentaire: gristData.fields?.Commentaire || gristData.Commentaire || ''\n  },\n  metadata: {\n    source: 'grist',\n    workflowId: $workflow.id,\n    executionId: $execution.id\n  }\n};\n\n// Log pour monitoring\nconsole.log('üì° Broadcasting:', JSON.stringify(message, null, 2));\n\n// Compteur de broadcasts (metrics)\nif (!$execution.customData) {\n  $execution.customData = { broadcastCount: 0 };\n}\n$execution.customData.broadcastCount++;\n\nreturn { json: message };"
      },
      "id": "prepare-broadcast",
      "name": "üì¶ Pr√©parer Broadcast",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [640, 300]
